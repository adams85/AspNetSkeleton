@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    @RenderSection("scripts", required: false)
}

@* https://www.jonathanbriehl.com/2014/01/17/vertical-menu-for-bootstrap-3/ *@
<div class="row">
  <div class="col-sm-2">
    <div class="sidebar-nav">
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-collapse sidebar-navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="@(ViewBag.ActiveSubMenuItem == "Overview" ? "active" : null)"><a href="@Url.Action("Index", "Home")">@T["Overview"]</a></li>
            <li class="@(ViewBag.ActiveSubMenuItem == "Account" ? "active" : null)"><a href="@Url.Action("Index", "Account")">@T["Account Settings"]</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
  <div class="col-sm-10">
    @RenderBody()
  </div>
</div>
