@model AspNetSkeleton.UI.Models.RegisterModel

<div class="page-header">
<h1>@T["Create an Account"]</h1>
</div>
<div>
@if (Settings.IsRegistrationEnabled)
{
    using (Html.BeginForm("Register", "Account", null, FormMethod.Post, new
    {
        @class = "form-horizontal",
        role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-sm-offset-2 col-sm-4">
                @Html.ValidationSummary(excludePropertyErrors: true)
            </div>
        </div>

        <div class="row form-group">
            <label for="@Html.IdFor(m => m.FirstName)" class="col-sm-2 control-label">@Html.DisplayNameFor(m => m.FirstName)</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
        </div>

        <div class="row form-group">
            <label for="@Html.IdFor(m => m.LastName)" class="col-sm-2 control-label">@Html.DisplayNameFor(m => m.LastName)</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>

        <div class="row form-group">
            <label for="@Html.IdFor(m => m.UserName)" class="col-sm-2 control-label">@Html.DisplayNameFor(m => m.UserName)</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="row form-group">
            <label for="@Html.IdFor(m => m.Password)" class="col-sm-2 control-label">@Html.DisplayNameFor(m => m.Password)</label>
            <div class="col-sm-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="row form-group">
            <label for="@Html.IdFor(m => m.ConfirmPassword)" class="col-sm-2 control-label">@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
            <div class="col-sm-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">@T["Create account"]</button>
            </div>
        </div>                       
    }
}
else
{
    <p class="lead text-warning">
        @T["Sorry, registration is closed currently."]
    </p>
}
</div>
