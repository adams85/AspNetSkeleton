@model AspNetSkeleton.UI.Models.LoginModel

<div class="page-header">
    <h1>@T["Login to Your Account"]</h1>
</div>
<div>
    @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken();

        <div class="row">
            <div class="col-sm-offset-2 col-sm-4">
                @Html.ValidationSummary(excludePropertyErrors: true)
            </div>
        </div>

        <div class="row form-group">
            <label for="@Html.IdFor(m => m.UserName)" class="col-sm-2 control-label">@Html.DisplayNameFor(m => m.UserName)</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="row form-group">
            <label for="@Html.IdFor(m => m.Password)" class="col-sm-2 control-label">@Html.DisplayNameFor(m => m.Password)</label>
            <div class="col-sm-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="col-sm-6 form-text">
                @Html.ActionLink(@T["Forgot your password?"].ToString(), "ResetPassword")
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.CheckBoxFor(m => m.RememberMe)
                <label for="@Html.IdFor(m => m.RememberMe)">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">@T["Login"]</button>
            </div>
        </div>
    }
</div>
